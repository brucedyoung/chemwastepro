{{extend 'layout.html'}}
<!--Include DYMO.Label.Framework.js for label printing-->
<script src="{{=URL('static','js/DYMO.Label.Framework.js')}}" type="text/javascript" charset="UTF-8"></script>
<script src="{{=URL('static','js/PrintLabel.js')}}" type="text/javascript" charset="UTF-8"></script>


<!--Include Select2 autocomplete-->
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.2/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.2/js/select2.min.js"></script>
<script type="text/javascript">
$(document).ready(function() {
  $(".select").select2();
});
</script>



<button id="printButton" style="background-color:transparent; border-color:transparent;"> 
  <img src="{{=URL('static','images/LabelPrinter32x32.gif')}}" width="32" height="32"/>
</button>

<!-- Main content -->
{{=form.custom.begin}}
    <section class="content">
        <div class="row">
        <!-- general form elements -->
        
            <div class="col-xs-5"><!-- Start column1-->
            <!-- form start -->
            <!-- Form Element sizes -->
                <div class="box box-success">
                    <div class="box-body">
                        <div class="form-group">
                            
                            
                            <label>Chemical Name</label>
                            {{form.custom.widget.name['_class'] = 'select'}}
                            {{form.custom.widget.name['_style'] = 'width: 50%'}}
                            <div> {{=form.custom.widget.name}}</div>
                            

                        
                            <p class="help-block">{{=disposalcode}}</p>
                            
                        </div>
                        <div class="col-xs-3">
                            <label>Quantity</label>
                            <div>{{=form.custom.widget.quantity}}</div>
                        </div>
                        <div class="col-xs-4">
                            <label>Bottle Type</label>
                            <div>{{=form.custom.widget.receptacle}}</div>
                        </div>
                        <div class="col-xs-5">
                            <label>Condition</label>
                            <div>{{=form.custom.widget.condition_}}</div>
                        </div> <!--End three column -->
                        <div class="col-xs-3">
                            <label>Capacity</label>
                            <div>{{=form.custom.widget.capacity}}</div>
                        </div>
                        <div class="col-xs-4">
                            <label>Amount</label>
                            <div>{{=form.custom.widget.amount}}</div>
                        </div>
                        <div class="col-xs-5">
                            <label>Units</label>
                            <div>{{=form.custom.widget.units}}</div>
                        </div><!--End three column -->

                        <div class="col-xs-6"><!-- two column --> 
                            <label>Shelf</label>
                            <div>{{=form.custom.widget.Ishelf}}</div>
                        </div>
                        <div class="col-xs-6">
                            <label>Container</label>
                            <div>{{=form.custom.widget.container}}</div>
                        </div><!-- ./two column --> 
                        

                        
                    </div><!-- End box-body-->
                </div> <!-- End box box-success-->
            </div><!-- End column1-->
            
            <div class="col-xs-4"><!-- Start column2-->
            <!-- Form Element sizes -->
                <div class="box box-success">
                    <div class="box-body">
                        <div>
                            <label>Item Components</label>
                            {{=form.custom.widget.components}}
                            <label>Item Comments</label>
                            {{=form.custom.widget.comments}}
                        </div>
                    </div><!-- End box-body-->
                </div> <!-- End box box-success-->
            </div><!-- ./column2-->
            
             <div class="col-xs-3"><!-- Start column3-->
            <!-- Form Element sizes -->
                <div class="box box-success">
                    <div class="box-body">
                        <div>
                           
                            <table class="table table-hover">
                                <tbody>
                                    <tr>
                                        <th>Tag Number</th>
                                        <td>12345</td>
                                    </tr>
                                    <tr>
                                        <th>Dept.</th>
                                        <td>Chemistry</td>
                                    </tr>
                                    <tr>
                                        <th>P.I.</th>
                                        <td>Mike Fournier</td>
                                    </tr>
                                    <tr>
                                        <th>Room Building </th>
                                        <td>120 Latimer</td>
                                    </tr>
                                    <tr>
                                         <th>Accumulation<br> Start Date</th>
                                         <td>1-1-2015</td>
                                    </tr>
                                    <tr>
                                         <th>Pickup Date</th>
                                         <td>1-15-15</td>
                                    </tr>
                                    <tr>
                                         <td colspan="2"><strong>Tag Comments</strong><br> text text textmore text even more even more even more even more even more </td>
                                    </tr>


                                </tbody>
                            </table>
                        </div>
                        
                    </div><!-- End box-body-->
                </div> <!-- End box box-success-->
            </div><!-- ./column3-->
            

        

            
        </div><!-- /.row -->
        <div class="box-footer">
            <div class=" btn ">{{=cancelbutton}}</div>
<div class=" pull-right"> {{=form.custom.submit}}</div>
        </div>
    </div><!-- /.content -->



       
{{=form.custom.end}}<!-- /.form -->    

        <label for="textTextArea">Label text:</label><br/>
        <textarea name="textTextArea" id="textTextArea"  rows='5' cols='40'>{{=labeltext}}</textarea>
    </div>
            <!-- </form>-->
